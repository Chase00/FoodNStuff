@model IEnumerable<FoodNStuff.MVC.Models.Product>
@{
    ViewBag.Title = "Index";
}

<h2>Products</h2>

<p>
    @Html.ActionLink("Create New Product", "Create")
</p>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.InventoryCount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsFood)
        </th>
        <th></th>
    </tr>

    @foreach (var product in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => product.ProductName)
            </td>
            <td>
               $ @Html.DisplayFor(modelItem => product.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.InventoryCount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => product.IsFood)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = product.ProductID }) |
                @Html.ActionLink("Details", "Details", new { id = product.ProductID }) |
                @Html.ActionLink("Delete", "Delete", new { id = product.ProductID }) |
            </td>
        </tr>

    }

</table>

